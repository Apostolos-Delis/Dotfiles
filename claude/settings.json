{
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "WebSearch",
      "WebFetch",
      "Task",
      "TodoWrite",
      "Skill"
    ],
    "deny": [
      "Bash(rm -rf /:*)",
      "Bash(sudo rm:*)",
      "Bash(chmod 777:*)",
      "Bash(> /dev/sda:*)",
      "Bash(mkfs:*)",
      "Bash(dd if:*)"
    ]
  },
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "bash -c '\"/opt/homebrew/bin/bun\" \"$(ls -td ~/.claude/plugins/cache/claude-hud/claude-hud/*/ 2>/dev/null | head -1)src/index.ts\" 2>/dev/null || echo \"\"'"
  },
  "enabledPlugins": {
    "claude-hud@claude-hud": true,
    "pyright-lsp@claude-plugins-official": true,
    "ralph-wiggum@claude-code-plugins": true
  }
}
