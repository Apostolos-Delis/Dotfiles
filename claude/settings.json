{
  "attribution": {
    "commit": "",
    "pr": ""
  },
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "WebSearch",
      "WebFetch",
      "Task",
      "TodoWrite",
      "Skill"
    ],
    "deny": [
      "Bash(rm -rf /:*)",
      "Bash(sudo rm:*)",
      "Bash(chmod 777:*)",
      "Bash(> /dev/sda:*)",
      "Bash(mkfs:*)",
      "Bash(dd if:*)"
    ]
  },
  "model": "opus",
  "statusLine": {
    "type": "command",
    "command": "bash -c '\"/opt/homebrew/bin/bun\" \"$(ls -td ~/.claude/plugins/cache/claude-hud/claude-hud/*/ 2>/dev/null | head -1)src/index.ts\" 2>/dev/null || echo \"\"'"
  },
  "enabledPlugins": {
    "claude-hud@claude-hud": true,
    "pyright-lsp@claude-plugins-official": true,
    "ralph-wiggum@claude-code-plugins": true,
    "code-simplifier@claude-plugins-official": true,
    "claude-mem@thedotmack": true
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/ccnotify/ccnotify.py UserPromptSubmit"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/ccnotify/ccnotify.py Stop"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/ccnotify/ccnotify.py Notification"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/tmux-reminder.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/format-file.sh"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/check-console-log.sh"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/show-analysis-summary.sh"
          }
        ]
      }
    ]
  }
}
